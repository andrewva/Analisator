@using WebSales.Models
@model IEnumerable<DataModel.Item>

@{
    ViewBag.Title = "Кабинет";
}

<h2>Кабинет</h2>

<p>
    @Html.ActionLink("Загрузить", "Index", "Upload")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FileName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ResultPath)
        </th>
        <th>
            Конкорданс
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UploadDate)
        </th>
        <th>
            Ссылка
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FileName)
            </td>
            <td>
                @Html.ActionLink("Результат", "Index", "Result", new UploadData { ResultText = item.ResultPath },null)
            </td>
            <td>
                @Html.ActionLink("Результат", "ConcordanseResult", "Result", new UploadData { ResultText = item.ResultPath }, null)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UploadDate)
            </td>
            <td>
                @Html.ActionLink("Скачать", "Download",new { path = item.ResultPath })
            </td>
        </tr>
    }

</table>
